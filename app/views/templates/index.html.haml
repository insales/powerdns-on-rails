%h1.underline Zone Templates

%table.table
  %tr
    %td
      = link_to new_zone_template_path, title: t(:help_template_zone_new), class: 'btn btn-success' do
        = fa_icon 'plus'
        = t(:label_template_create_new)
    %td &nbsp;

  - @zone_templates.each do |zone_template|
    %tr
      %td= link_to zone_template.name, zone_template_path(zone_template)
      %td
        = link_to fa_icon('edit fw'), edit_zone_template_path(zone_template), title: t(:help_template_zone_edit)
        = link_to fa_icon('trash fw', class: 'text-danger'), zone_template_path(zone_template), method: :delete, data: { confirm: t(:confirm_template_delete) }, title: t(:help_template_zone_delete)
        - unless zone_template.has_soa?
          .badge.bg-warning{ title: t(:help_template_zone_soa_missing) }
            = fa_icon 'exclamation-triangle fw'
            No SOA