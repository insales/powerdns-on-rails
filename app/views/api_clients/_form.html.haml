= form_for(@api_client) do |f|
  .form-group.row.mb-3
    = error_messages_for @api_client

  .form-group.row.mb-3
    = f.label :name, text: t(:label_api_client_name), class: 'col-sm-2 col-form-label'
    .col-sm-10= f.text_field :name, class: 'form-control', placeholder: "Name"

  .form-group.row.mb-3
    .col-sm-10.offset-sm-2
      = submit_tag t(:generic_save), class: 'btn btn-primary'
      = link_to t(:generic_cancel), api_clients_path, class: 'btn btn-secondary'