%h1.underline
  = t(:title_api_client_details_for, name: @api_client.name)

%table.grid
  %tr
    %td= t :label_api_client_name
    %td= @api_client.name
  %tr
    %td= t :label_api_client_token
    %td= @api_client.authentication_token
  %tr
    %td &nbsp;
    %td &nbsp;
  %tr
    %td &nbsp;
    %td
      = link_to image_tag('user_edit.png'), edit_api_client_path( @api_client )
      = link_to t(:generic_change), edit_api_client_path( @api_client )
      &nbsp;&nbsp;&nbsp;
      = link_to image_tag('user_delete.png'), api_client_path( @api_client ), method: :delete, confirm: t(:confirm_user_remove)
      = link_to t(:generic_remove), api_client_path( @api_client ), method: :delete, confirm: t(:confirm_user_remove)